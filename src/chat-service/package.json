{
  "name": "cefetinder-chat-service",
  "version": "1.0.0",
  "description": "Chat Service com DDD, Clean Architecture e WebSocket",
  "main": "dist/presentation/WebSocket/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only presentation/server.ts",
    "start": "node dist/presentation/WebSocket/server.js",
    "start:dev": "nodemon dist/presentation/WebSocket/server.js",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rm -rf dist node_modules",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker-compose build",
    "type-check": "tsc --noEmit",
    "postinstall": "npm run build"
  },
  "keywords": [
    "chat",
    "websocket",
    "ddd",
    "clean-architecture",
    "typescript",
    "nodejs"
  ],
  "author": "Seu Nome",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "socket.io": "^4.7.2",
    "ws": "^8.14.2",
    "pg": "^8.11.3",
    "amqplib": "^0.10.3",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.20",
    "@types/cors": "^2.8.17",
    "@types/ws": "^8.5.10",
    "@types/pg": "^8.10.7",
    "@types/amqplib": "^0.10.1",
    "@types/uuid": "^9.0.7",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "nodemon": "^3.0.2",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/seu-usuario/cefetinder-chat-service.git"
  },
  "bugs": {
    "url": "https://github.com/seu-usuario/cefetinder-chat-service/issues"
  },
  "homepage": "https://github.com/seu-usuario/cefetinder-chat-service#readme"
}